	  <%= f.label :type, "Transaction Type" %><br />
    <%= f.select(:type, ['Expense', 'Income']) %><br />

		<%= f.label :frequency %><br />		
	 	<%= f.select(:frequency, [['Weekly', 'once_per_week'], ['Daily', 'once_per_day']]) %>
  </div>

  <div class="actions">
    <%= f.submit "Create New Transaction" %>
  </div>
